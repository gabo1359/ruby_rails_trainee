<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
  
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "icon_gabo.png" %>
    <% end %>

    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <%= link_to 'Home', root_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Products', products_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Orders', orders_path, class: 'nav-link' %>
      </li>
    </ul>
    
    <div class='navbar-search' >
      <%= form_tag products_path, class: "d-flex", method: :get do %>
        <%= text_field_tag :query,
                            params[:query],
                            class:"form-control",
                            placeholder: 'Find a product'
        %>
        <%= submit_tag "Search", class: "btn btn-outline-primary" %>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
              <img
                src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp"
                class="rounded-circle"
                height="35"
                alt="Black and white portrait of a man"
                loading="lazy"
              />
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to 'My account', edit_user_registration_path, class: 'dropdown-item' %>
              <div class="dropdown-divider"></div>
              <%= link_to "Log out", destroy_user_session_path, :method => :delete, class: 'dropdown-item' %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Log in', user_session_path, class: 'btn btn-outline-primary' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
